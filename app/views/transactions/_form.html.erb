<%= form_for @transaction, url: category_transactions_path do |form| %>
  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class= 'input-fields'>
  <div class= input-wrapper>
    <%= form.label  "Choose Category"  %>
    <%= form.collection_select(:category_id, Category.all, :id, :name, {:prompt => 'Select a Category', :selected => @category.id }, { required: true })%>
  </div>  
  
  <div class= input-wrapper>
    <%= form.label  "Product"  %>
    <%= form.text_field :name, autofocus: true, placeholder: "Item name", required: true %>
  </div>  

  <div class= input-wrapper>
    <%= form.label  "Amount"  %>
    <%= form.number_field :amount, autofocus: true, step: 0.01, placeholder: "Amount", required: true %>
  </div>  
  

  </div>

  <div class= "actions">
    <%= form.submit class: "transaction-btn" %>
  </div>
<% end %>
