<header>
 <%= link_to "Back", root_path, class: 'back_btn'%>

 <h1>Transactions</h1>

  <% if user_signed_in? %>
    <%= button_to "Logout", destroy_user_session_path, method: :delete, data: {turbo: false}, class: "btn bg-danger"  %>
  <% end %>

</header>

<%= render partial: "categories/category", locals: {category: @category} %>

<div id="transactions">
  <% @transactions.each do |transaction| %>
    <%= render transaction %>
  <% end %>
</div>

<footer>
<%= link_to "Add Transaction", new_category_transaction_path %>
</footer>